{
  "AppName": "APIGateway",
  "CookieDomain": ".guildswarm.org",
  "FrontendURL": "https://guildswarm.org",
  "AuthCallbackURI": "/auth-callback",
  "AuthCallbackFailedURI": "/auth-callback-failed",
  "Discovery": {
    "Address": "http://gswi.consul:8500"
  },
  "Logging": {
    "Console": {
      "Enabled": true,
      "MinimumLevel": "Information"
    },
    "Graylog": {
      "Enabled": false,
      "Host": "localhost",
      "Port": "12201",
      "MinimumLevel": "Information"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "SwarmBotRoute": {
        "ClusterId": "SwarmBotCluster",
        "RateLimiterPolicy": "ip-60request/minute-limit",
        "Match": {
          "Path": "swarm-bot/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      },
      "MembersRoute": {
        "ClusterId": "MembersCluster",
        "RateLimiterPolicy": "ip-60request/minute-limit",
        "Match": {
          "Path": "members-ms/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      },
      "EventsRoute": {
        "ClusterId": "EventsCluster",
        "RateLimiterPolicy": "ip-60request/minute-limit",
        "Match": {
          "Path": "events-ms/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      }
    },
    "Clusters": {
      "SwarmBotCluster": {
        "Destinations": {
          "SwarmBotCluster/destination1": {
            "Address": "http://gswb.swarm-bot:8080/"
          }
        }
      },
      "MembersCluster": {
        "Destinations": {
          "MembersCluster/destination1": {
            "Address": "http://gswb.members:8080/"
          }
        }
      },
      "EventsCluster": {
        "Destinations": {
          "EventsCluster/destination1": {
            "Address": "http://gswb.events:8080/"
          }
        }
      }
    }
  },
  "Bus": {
    "RabbitMQ": {
      "Publisher": {
        "IntegrationExchange": "api-gateway.exchange"
      },
      "Consumer": {
        "IntegrationQueue": "api-gateway.queue"
      }
    }
  }
}

